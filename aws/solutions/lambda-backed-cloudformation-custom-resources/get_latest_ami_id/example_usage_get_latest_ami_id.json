{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Test our custom resource",
    "Parameters": {
        "SecurityGroupIds": {
            "Type": "List<AWS::EC2::SecurityGroup::Id>"
        }
    },
    "Resources": {
        "AMISearchCustomResource": {
            "Type": "Custom::AMISearch",
            "Properties": {
                "ServiceToken": {
                    "Fn::ImportValue": "AMISearchARN"
                },
                "owners": "self amazon",
                "filters": "[{\"Name\":\"root-device-type\",\"Values\":[\"ebs\"]},{\"Name\":\"name\",\"Values\":[\"amzn-ami-hvm-????.??.?.*gp2\"]}]",
                "region": {
                    "Fn::Sub": "${AWS::Region}"
                },
                "executable-users": ""
            }
        },
        "EC2instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {
                    "Fn::GetAtt": [
                        "AMISearchCustomResource",
                        "ami-id"
                    ]
                },
                "AvailabilityZone": {
                    "Ref": "AWS::Region"
                },
                "InstanceType": "t2.nano",
                "SecurityGroupIds": {
                    "Ref": "SecurityGroupIds"
                },
                "SubnetId": "subnet-1234abcd"
            }
        }
    },
    "Outputs": {
        "FoundAMI": {
            "Description": "The AMI we found",
            "Value": {
                "Fn::GetAtt": [
                    "AMISearchCustomResource",
                    "ami-id"
                ]
            }
        }
    }
}
